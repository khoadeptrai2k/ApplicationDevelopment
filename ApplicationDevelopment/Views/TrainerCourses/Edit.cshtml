@model ApplicationDevelopment.ViewModel.TrainerCourseViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit","TrainerCourses", FormMethod.Post))
{
    @Html.HiddenFor(p => p.TrainerCourse.Id)
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(p => p.TrainerCourse.Course.Name)
        @Html.DropDownListFor(p => p.TrainerCourse.CourseId,
                       new SelectList(Model.Courses, "Id", "Name"),
                       new { @Class = "form-control" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>@Html.ActionLink("Back to List","Index")</div>