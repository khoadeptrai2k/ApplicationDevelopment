@model ApplicationDevelopment.ViewModel.TraineeCourseViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Assign Trainee Course</h2>
@using (Html.BeginForm("Create", "TraineeCourses", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(p => p.TraineeCourse.TraineeId)
        @Html.DropDownListFor(m => m.TraineeCourse.TraineeId, new SelectList(Model.Trainees, "Id", "UserName"),"Sellect Trainee", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.TraineeCourse.Course.Name)
        @Html.DropDownListFor(m => m.TraineeCourse.CourseId, new SelectList(Model.Courses, "Id", "Name"), "Sellect Course", new { @class = "form-control" })
    </div>
    <button tupe="submit" class="btn btn-primary">Assign</button>

}
