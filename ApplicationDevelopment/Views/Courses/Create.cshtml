﻿@model ApplicationDevelopment.ViewModel.CourseCategoryViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create a new Course</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Create", "Courses", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Course.Name)
        @Html.TextBoxFor(p => p.Course.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Course.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Course.CategoryId)
        @Html.DropDownListFor(p => p.Course.CategoryId,
              new SelectList(Model.Categories, "Id", "Name"),
              new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Course.CategoryId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Course.DueDate)
        @Html.TextBoxFor(p => p.Course.DueDate, new { @class = "form-control",@type = "date" })
        @Html.ValidationMessageFor(p => p.Course.DueDate, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
}
@Html.ActionLink("Back to Index", "Index")